<file_definition format="netcdf4" time_counter="instant" type="one_file">

        <file description="UM output" id="x2" name="ce262a_pc" output_freq="3h" split_freq="3h">

		<field 
			id="m01s00i024_inst" 
			name="m01s00i024_inst" 
			field_ref="m01s00i024_test" 
			operation="instant" 	
		/>

		<field 
			id="m01s00i024_ens" 
			name="m01s00i024_ens" 
			field_ref="m01s00i024_test" 
			grid_ref="um-atmos_grid_t_ufs_ens" 
			operation="instant" 
		/>

              
		<field 
			id="sqav"
			name="sqav" 
			field_ref="m01s00i024_ens" > m01s00i024_ens*m01s00i024_ens 
		</field>

		<field 
			id="ensq" 
			name="ensq" 
			field_ref="m01s00i024_test" > m01s00i024_test*m01s00i024_test 
		</field>

		<field 
			id="avensq" 
			name="avensq" 
			field_ref="ensq" 
			grid_ref="um-atmos_grid_t_ufs_ens" 
			operation="instant" 	
		/>

		<field 
			id="stdev" 
			name="stdev" 
			grid_ref="um-atmos_grid_t_test" 
			operation="instant" > sqrt(avensq - sqav) 
		</field>

        </file>

</file_definition>

