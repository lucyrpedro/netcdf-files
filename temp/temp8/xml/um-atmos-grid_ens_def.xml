<grid_definition>

  <grid id="um-atmos_grid_t_DIAG">
    <domain domain_ref="um-atmos_grid_t" />
    <axis axis_ref="ensemble" />
  </grid>

  <grid id="um-atmos_grid_t_DIAG_ens_mean">
    <domain domain_ref="um-atmos_grid_t" />
    <scalar>
      <reduce_axis operation="average" />
    </scalar>
  </grid>

  <grid id="um-atmos_grid_t_DIAG_ens_max">
    <domain domain_ref="um-atmos_grid_t" />
    <scalar id="ens-max-grid">
      <reduce_axis operation="max" />
    </scalar>
  </grid>

  <grid id="um-atmos_grid_t_DIAG_ens_min">
    <domain domain_ref="um-atmos_grid_t" />
    <scalar id="ens-min-grid">
      <reduce_axis operation="min" />
    </scalar>
  </grid>

  <grid id="um-atmos_grid_t_DIAG_ens_sum">
    <domain domain_ref="um-atmos_grid_t" />
    <scalar id="ens-sum-grid">
      <reduce_axis operation="sum" />
    </scalar>
  </grid>

</grid_definition>
