#SBATCH --account=n02-cms
#SBATCH --partition=standard
#SBATCH --qos=standard
#SBATCH --nodes=101
#SBATCH --ntasks=6464
#SBATCH --tasks-per-node=64
#SBATCH --cpus-per-task=2
# N.B. CYLC_DIR has been updated on the remote host
export CYLC_DIR='/mnt/lustre/a2fs-work1/work/y07/shared/umshared/software/cylc-7.8.7'
export CYLC_VERSION='7.8.7'
CYLC_FAIL_SIGNALS='EXIT ERR XCPU'

cylc__job__inst__cylc_env() {
    # CYLC SUITE ENVIRONMENT:
    export CYLC_CYCLING_MODE="360day"
    export CYLC_SUITE_FINAL_CYCLE_POINT="19790301T0000Z"
    export CYLC_SUITE_INITIAL_CYCLE_POINT="19790301T0000Z"
    export CYLC_SUITE_NAME="u-ch330"
    export CYLC_UTC="True"
    export CYLC_VERBOSE="false"
    export TZ="UTC"

    export CYLC_SUITE_RUN_DIR="$HOME/cylc-run/u-ch330"
    export CYLC_SUITE_DEF_PATH="${HOME}/cylc-run/u-ch330"
    export CYLC_SUITE_DEF_PATH_ON_SUITE_HOST="/home/luciana/cylc-run/u-ch330"
    export CYLC_SUITE_UUID="8b8f553d-6f81-4953-821d-772a177fc1ea"

    # CYLC TASK ENVIRONMENT:
    export CYLC_TASK_JOB="19790301T0000Z/atmos_main/01"
    export CYLC_TASK_NAMESPACE_HIERARCHY="root STARTDUMP UM ATMOS SUBMIT_RETRIES HPC UM_PARALLEL ATMOS_RESOURCE RUN_MAIN atmos_main"
    export CYLC_TASK_DEPENDENCIES="recon.19790301T0000Z"
    export CYLC_TASK_TRY_NUMBER=1
}

cylc__job__inst__global_init_script() {
# GLOBAL-INIT-SCRIPT:
. /work/y07/shared/umshared/bin/rose-um-env
export HOME=$DATADIR
export CYLC_SUITE_RUN_DIR=$HOME/cylc-run/$CYLC_SUITE_NAME
export CYLC_SUITE_DEF_PATH=${CYLC_SUITE_RUN_DIR}
export ROSE_VERSION='pumatest'
}

cylc__job__inst__user_env() {
    # TASK RUNTIME ENVIRONMENT:
    export IS_CYLC_SUITE_INITIAL_CYCLE_POINT IS_CYLC_TASK_TRY_NUMBER_1 BASIS_UM_PT BASIS_YR DATEC_DUMP RUNID UMVN AINITIAL ASTARTDIR FLUME_IOS_NPROC INCR RCF_NPROCX RCF_NPROCY ROSE_APP_OPT_CONF_KEYS ROSE_TASK_APP UM_ATM_NPROCX UM_ATM_NPROCY HYPERTHREADS OMP_NUM_THREADS CONTINUE TASKEND PLATFORM UMDIR YEAR ATP_ENABLED ROSE_LAUNCHER OMP_PLACES ROSE_LAUNCHER_PREOPTS FI_OFI_RXM_SAR_LIMIT DATAM
    IS_CYLC_SUITE_INITIAL_CYCLE_POINT="$(if [ $CYLC_TASK_CYCLE_POINT == $CYLC_SUITE_INITIAL_CYCLE_POINT ]; then echo "true"; else echo "false"; fi)"
    IS_CYLC_TASK_TRY_NUMBER_1="$(if [ $CYLC_TASK_TRY_NUMBER -eq 1 ]; then echo "true"; else echo "false"; fi)"
    BASIS_UM_PT="$(rose date -c --calendar=360day --print-format='%Y,%m,%d,%H,%M,%S' 19790301T0000Z)"
    BASIS_YR="$(rose date -c --calendar=360day --print-format='%Y' 19790301T0000Z)"
    DATEC_DUMP="$(rose date -c --calendar=360day --print-format='%Y%m%d_%H')"
    RUNID="$(echo -n $CYLC_SUITE_NAME | cut -d - -f 2 | cut -c 1-5)"
    UMVN="11.2"
    AINITIAL="$UMDIR/HRCM/start/cf432a.da19810301_00"
    ASTARTDIR="$ROSE_DATA/History_Data"
    FLUME_IOS_NPROC="448"
    INCR="$CYLC_TASK_SUBMIT_NUMBER"
    RCF_NPROCX="16"
    RCF_NPROCY="24"
    ROSE_APP_OPT_CONF_KEYS="(ga7p1) (n1280) (360day)  global_ghg_cmip6_v2 cmip6_solar_archer n1280_4min ga7p1"
    ROSE_TASK_APP="um"
    UM_ATM_NPROCX="64"
    UM_ATM_NPROCY="94"
    HYPERTHREADS="1"
    OMP_NUM_THREADS="2"
    CONTINUE="$(if $IS_CYLC_SUITE_INITIAL_CYCLE_POINT && $IS_CYLC_TASK_TRY_NUMBER_1; then echo "false"; else echo "true"; fi)"
    TASKEND="$(rose date -c --calendar=360day --print-format='y,m,d,h,M,s' --offset2=P1M 19790301T0000Z ref)"
    PLATFORM="cce"
    UMDIR="/work/y07/shared/umshared"
    YEAR="$(rose date -c --calendar=360day --print-format='%Y')"
    ATP_ENABLED="1"
    ROSE_LAUNCHER="srun"
    OMP_PLACES="cores"
    ROSE_LAUNCHER_PREOPTS="--hint=nomultithread --distribution=block:block"
    FI_OFI_RXM_SAR_LIMIT="64K"
    DATAM="$ROSE_DATA/History_Data"
}

cylc__job__inst__env_script() {
# ENV-SCRIPT:
eval $(rose task-env)
}

cylc__job__inst__pre_script() {
# PRE-SCRIPT:
ulimit -s unlimited
                     module load um
                     module list 2>&1
#                     export LD_LIBRARY_PATH=$CRAY_LD_LIBRARY_PATH:$LD_LIBRARY_PATH
}

cylc__job__inst__script() {
# SCRIPT:
. $ROSE_DATA/etc/um_ancils_gl; mkdir -p $DATAM; lfs setstripe -c -1 $DATAM; rose task-run --verbose -O '(archer2)' --path="share/fcm_make_um/build-*/bin"
}

cylc__job__inst__post_script() {
# POST-SCRIPT:
save_wallclock.sh P1M
}

. "${CYLC_DIR}/lib/cylc/job.sh"
cylc__job__main

#EOF: 19790301T0000Z/atmos_main/01
